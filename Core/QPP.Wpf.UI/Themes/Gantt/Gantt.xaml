    <!-- QPP.Wpf.UI.Controls.Gantt.HeaderGanttItem -->
    <Style TargetType="gantt:HeaderGanttItem">
        <Setter Property="UseLayoutRounding" Value="False"/>
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="Background" Value="Black" />
        <Setter Property="IsDragDropEnabled" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="gantt:HeaderGanttItem" >
                    <Grid 
                        Margin="0,4,0,2"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        x:Name="NodeElement" >
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation
                                            BeginTime="00:00:00"
                                            Duration="00:00:00.001" 
                                            Storyboard.TargetName="NodeElement" 
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.75"  />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="Selection">
                                <VisualState x:Name="UnSelected" />
                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="dots"
                                            Storyboard.TargetProperty="Opacity"
                                            Duration="0"
                                            To="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ToolTipService.ToolTip>
                            <ToolTip 
                                Content="{TemplateBinding ItemContent}"
                                ContentTemplate="{TemplateBinding ToolTipContentTemplate}" />
                        </ToolTipService.ToolTip>
                        <Rectangle 
                            x:Name="dots"
                            IsHitTestVisible="False"
                            StrokeThickness="2"
                            StrokeDashArray="1 1"
                            StrokeDashCap="Flat"
                            Stroke="Black"
                            Opacity="0"
                            Grid.ColumnSpan="3"
                            Grid.RowSpan="2"/>
                        <Border
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="0"
                            Background="{TemplateBinding Background}"
                            Grid.ColumnSpan="3" />                        
                        <Polygon
                            Grid.Column="0"
                            x:Name="LeftSide"
                            Grid.Row="1"
                            Stroke="{TemplateBinding BorderBrush}"
                            StrokeThickness="0"
                            Fill="{TemplateBinding Background}" >
                            <Polygon.Points >
                                <Point X="0" Y="0" />
                                <Point X="0" Y="5" />
                                <Point X="5" Y="0" />
                            </Polygon.Points>
                        </Polygon>
                        <Polygon
                            Grid.Column="2"
                            x:Name="RightSide"
                            Grid.Row="1"
                            Stroke="{TemplateBinding BorderBrush}"
                            StrokeThickness="0"
                            Fill="{TemplateBinding Background}" >
                            <Polygon.Points >
                                <Point X="0" Y="0" />
                                <Point X="5" Y="5" />
                                <Point X="5" Y="0" />
                            </Polygon.Points>
                        </Polygon>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

