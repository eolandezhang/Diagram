    <!-- QPP.Wpf.UI.Controls.Gantt.TimespanHeader.TimespanHeaderRow -->
    <Style TargetType="timespanHeader:TimespanHeaderRow">
        <Setter Property="TimeUnit" Value="Months" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate 
                    TargetType="timespanHeader:TimespanHeaderRow">
                    <Border 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}">
                        <timespanHeader:TimespanHeaderCellsPresenter 
                            x:Name="CellsPresenter" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- QPP.Wpf.UI.Controls.Gantt.TimespanHeader.TimespanHeaderCell -->
    <Style TargetType="timespanHeader:TimespanHeaderCell">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate 
                    TargetType="timespanHeader:TimespanHeaderCell">
                    <Border
                        x:Name="cell"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}">
                        <Grid >
                            <TextBlock x:Name="txtElement"
                                Text="{TemplateBinding Text}"
                                Foreground="Black"
                                Margin="0,0"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsWorking"
                                 Value="false">
                            <Setter TargetName="txtElement"
                                    Property="Foreground"
                                    Value="Red">                                
                            </Setter>
                        </Trigger>                                 
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

